{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "build",
        "/nologo",
        "/property:GenerateFullPaths=true",
n          "/consoleloggerparameters:NoSummary"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "shell",
      "dependsOn": "build",
      "args": [
        "test",
        "--no-build",
        "/nologo",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary",
        "--logger:'console;verbosity=normal'",
        "-v:q"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "format",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "tool",
        "run",
        "fantomas",
        "-r",
        "${workspaceRoot}",
      ],
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    }
  ]
}